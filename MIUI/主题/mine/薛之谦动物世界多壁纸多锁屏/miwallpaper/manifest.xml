<?xml version="1.0" encoding="utf-8"?>
 
<MiWallpaper version="1" frameRate="30" screenWidth="1080">
	<VariableBinders>
		 <SensorBinder type="gravity" rate="500">
			<Variable name="bgx" index="0"/>
			<Variable name="bgy" index="1"/>
		</SensorBinder>
    </VariableBinders>
 
 	<Group>
		<Image x="#screen_width/2" y="#screen_height/2"   align="center" alignV="center" src="bg1.jpg" visibility="eq(#cf,0)"/>
		<Image x="#screen_width/2" y="#screen_height/2"   align="center" alignV="center" src="bg2.jpg" visibility="eq(#cf,1)"/>
		<Image x="#screen_width/2" y="#screen_height/2"   align="center" alignV="center" src="bg3.jpg" visibility="eq(#cf,2)"/>
		<Image x="#screen_width/2" y="#screen_height/2"   align="center" alignV="center" src="bg4.jpg" visibility="eq(#cf,3)"/>
		<Image x="#screen_width/2" y="#screen_height/2"   align="center" alignV="center" src="bg5.jpg" visibility="eq(#cf,4)"/>
		<Image x="#screen_width/2" y="#screen_height/2"   align="center" alignV="center" src="bg6.jpg" visibility="eq(#cf,5)"/>
		<Image x="#screen_width/2" y="#screen_height/2"   align="center" alignV="center" src="bg7.jpg" visibility="eq(#cf,6)"/>
		<Image x="#screen_width/2" y="#screen_height/2"   align="center" alignV="center" src="bg8.jpg" visibility="eq(#cf,7)"/>
		<Image x="#screen_width/2" y="#screen_height/2"   align="center" alignV="center" src="bg9.jpg" visibility="eq(#cf,8)"/>
		<Image x="#screen_width/2" y="#screen_height/2"   align="center" alignV="center" src="bg10.jpg" visibility="eq(#cf,9)"/>
		<Image x="#screen_width/2" y="#screen_height/2"   align="center" alignV="center" src="bg11.jpg" visibility="eq(#cf,10)"/>
		<Image x="#screen_width/2" y="#screen_height/2"   align="center" alignV="center" src="bg12.jpg" visibility="eq(#cf,11)"/>
		<Image x="#screen_width/2" y="#screen_height/2"   align="center" alignV="center" src="bg13.jpg" visibility="eq(#cf,12)"/>
		<Image x="#screen_width/2" y="#screen_height/2"   align="center" alignV="center" src="bg14.jpg" visibility="eq(#cf,13)"/>
		
	</Group>
	<!--切换壁纸按钮-->
	<Button x="1080" y="1850" w="70" h="350" align="right"  alignV="bottom" >
		<Triggers>
			<Trigger action="double">
				<VariableCommand name="cf" expression="int(#cf+1)%14" persist="true"/>
			</Trigger>
		</Triggers>
	</Button>
	<!--隐藏按钮-->
	<Button x="1080" y="1850" w="70" h="70" align="right"  alignV="bottom"  visibility="not(#xw_ts)">
		<Triggers>
			<Trigger action="up">
				<VariableCommand name="xw_ts" expression="int(#xw_ts+1)%2" persist="true"/>
			</Trigger>
		</Triggers>
	</Button>
	<Image x="1080" y="1850" align="right"  alignV="bottom" src="close.png" visibility="eq(#xw_ts,0)"/>
</MiWallpaper>
 
