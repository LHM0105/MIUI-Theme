 <!--原创代码，抄袭必究-->
<MiWallpaper version="1" frameRate="30" screenWidth="1080">
	<VariableBinders>
		 <SensorBinder type="gravity" rate="500">
			<Variable name="bgx" index="0"/>
			<Variable name="bgy" index="1"/>
		</SensorBinder>
    </VariableBinders>
 
 	<Group>
		<Image x="#screen_width/2" y="#screen_height/2"   align="center" alignV="center" src="bg.jpg" />
		
	</Group>
<!--动画-->
<Image x="0" y="0" pivotX="50" pivotY="50" src="1.png">
	<!--位移-->
	<PositionAnimation>
		<Item x="400" y="800" time="5000" />
		<Item x="1000" y="1500" time="12000"/>
	</PositionAnimation>
	<!--平面旋转-->
	<RotationAnimation>
		<Item value="0" time="0" />
		<Item value="360" time="12000"/> 
	</RotationAnimation>
	
	<!--透明度-->
	<AlphaAnimation> 
		<Item value="255" time="0"/>
		<Item value="100" time="5000"/>
		<Item value="0" time="12000"/>
	</AlphaAnimation>
</Image>

